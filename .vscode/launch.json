{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch localhost",
            "type": "firefox",
            "request": "launch",
            "url": "http://localhost:9799",
            "clearConsoleOnReload": true,
            "internalConsoleOptions": "openOnSessionStart",
            "pathMappings": [
                { "url": "webpack:///app/", "path": "${workspaceFolder}/app" },
                { "url": "webpack:///~/", "path": "${workspaceFolder}/node_modules/" },
                { "url": "webpack:///./~/", "path": "${workspaceFolder}/node_modules/" },
                { "url": "webpack:///node_modules/", "path": "${workspaceFolder}/node_modules/" },
                { "url": "webpack:///webpack", "path": null },
                { "url": "webpack:///(webpack)", "path": null },
            ]
        },
    ]
}
{
    "compilerOptions": {
        "outDir": "./lib/",
        "baseUrl": "./app",
        "esModuleInterop": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": false,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": false,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "allowJs": true
    },
    "include": [
        "./app/**/*"
    ],
    "exclude": [
        ".git",
        "tslint.json",
        ".vscode"
    ]
}